{
  "name": "electron-react-boilerplate",
  "version": "1.0.0",
  "description": "ElectronJS with ReactJS boilerplate",
  "scripts": {
    "prod": "npx rimraf dist && webpack --config=./internals/webpack/webpack.prod.js && electron --noDevServer .",
    "dev": "npx rimraf dist && webpack-dev-server --hot --host 0.0.0.0 --config=./internals/webpack/webpack.dev.js",
    "build": "npx rimraf dist && webpack --config=./internals/webpack/webpack.prod.js",
    "package": "npx rimraf dist && webpack --config=./internals/webpack/webpack.prod.js",
    "postpackage": "npx rimraf builds && electron-packager ./ ReactApp --out=./builds"
  },
  "main": "main.js",
  "author": "Alexander Huber",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.5",
    "css-loader": "^2.1.1",
    "electron": "^4.0.8",
    "electron-packager": "^13.1.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.2.1"
  }
}
