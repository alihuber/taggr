{
  "name": "taggr",
  "version": "0.0.1",
  "description": "Shameless port of the 'tagr' id3 tag editor, implemented in Electron and React",
  "scripts": {
    "prod": "npx rimraf dist && webpack --config=./internals/webpack/webpack.prod.js && electron --noDevServer .",
    "debug": "npx rimraf dist && webpack --config=./internals/webpack/webpack.prod.js && electron --inspect-brk --noDevServer .",
    "dev": "npx rimraf dist && webpack-dev-server --hot --host 0.0.0.0 --config=./internals/webpack/webpack.dev.js",
    "build": "npx rimraf dist && webpack --config=./internals/webpack/webpack.prod.js",
    "package": "npx rimraf dist && webpack --config=./internals/webpack/webpack.prod.js",
    "postpackage": "npx rimraf builds && electron-packager ./ Taggr --out=./builds --asar",
    "build-win": "node ./build-win.js",
    "test": "jest --coverage",
    "debug-test": "node --inspect-brk node_modules/.bin/jest --runInBand"
  },
  "productName": "Taggr",
  "main": "main.js",
  "author": "Alexander Huber",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-react": "^7.0.0",
    "@material-ui/core": "^3.9.3",
    "@material-ui/icons": "^3.0.2",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.5",
    "browser-id3-writer": "^4.1.0",
    "css-loader": "^2.1.1",
    "electron": "^4.0.8",
    "electron-packager": "^13.1.1",
    "electron-winstaller": "^3.0.4",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.13.0",
    "express": "^4.16.4",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "id3-parser": "^2.0.0",
    "jest": "^24.8.0",
    "lodash": "^4.17.11",
    "npm-check-updates": "^3.1.9",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-flexbox-grid": "^2.1.2",
    "react-sticky": "^6.0.3",
    "react-test-renderer": "^16.8.6",
    "style-loader": "^0.23.1",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.3.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js",
      "\\.(gif|ttf|eot|svg)$": "<rootDir>/__mocks__/fileMock.js"
    },
    "setupFiles": [
      "<rootDir>/enzyme.config.js"
    ]
  }
}
